---
import { getCollection } from "astro:content";
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";

const featuredSites = await getCollection("showcase", ({ data }) => "featured" in data);
const orderedSites = featuredSites.sort((a, b) => {
  const aFeatured = a.data.featured || 0;
  const bFeatured = b.data.featured || 0;
  return aFeatured - bFeatured;
});
---

<ContentSection title="Videos" id="showcase">
  <div slot="lead">
    Astro is <span class="text-primary">versatile</span>.{" "}
    <span class="text-primary">Explore</span> what's possible and get{" "}
    <span class="text-primary">inspired</span>.
  </div>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {orderedSites.length > 0
        ? orderedSites.map((site) => <ShowcaseCard site={site} />)
        : <p>No se encontraron sitios destacados.</p>}
    </div>
    <p class="text-right text-sm">
      <a class="text-primary" href="https://astro.build/showcase/">
        ...and more &rarr;
      </a>
    </p>
  </div>
</ContentSection>
